<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AddTitleActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:fontFamily="@font/title"
        android:text="새로운 여행을"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:fontFamily="@font/title"
        android:text="다녀오셨나요?"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:id="@+id/guideText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/content_bold"
        android:text="대표 사진 선택"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <ImageButton
        android:id="@+id/addImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/add"
        android:scaleType="fitCenter"/>
    <ImageView
        android:id="@+id/addImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/tripTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/content_light"
        android:textSize="20dp"
        android:hint="여행 이름" />
    <EditText
        android:id="@+id/tripLocation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/content_light"
        android:textSize="20dp"
        android:hint="여행 장소" />
    <EditText
        android:id="@+id/tripDay"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/content_light"
        android:textSize="20dp"
        android:hint="여행 날짜" />
    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_round"
        android:fontFamily="@font/title"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:text="다음으로" />
</LinearLayout>